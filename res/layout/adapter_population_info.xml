<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:orientation="horizontal" >
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="top"
        android:background="@drawable/personinfo"/>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_address_AdPopulationInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="江西省九江市庐山区前进东路551号"
            android:textSize="14sp"
            android:textColor="@color/comment_Gray" />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/tv_name_AdPopulationInfo"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:textSize="14sp"
            android:text="张三"/>
  <TextView
            android:id="@+id/tv_idNum_AdPopulationInfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="363329********7845"
            android:gravity="bottom"
            android:textColor="@color/comment_Gray"
            android:textSize="12sp" />
    </LinearLayout>

  
</LinearLayout>
</LinearLayout>
