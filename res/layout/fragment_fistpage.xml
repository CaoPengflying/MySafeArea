<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/policebule"
        android:padding="6dp" >

        <Spinner
            android:id="@+id/sp_selectArea_fistpage"
            android:background="@color/policebule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:popupBackground="@color/policebule"
            android:dropDownWidth="100dp"
            android:gravity="center"
            android:dropDownHorizontalOffset="40dp"
            android:spinnerMode="dropdown"
            android:layout_marginLeft="10dp" 
            android:entries="@array/areaname"/>

        <ImageView
            android:layout_toRightOf="@id/sp_selectArea_fistpage"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/select" />
        <ImageView
            android:id="@+id/iv_message_FrfistPage"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/masage" />
        
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
            <LinearLayout
                android:id="@+id/ll_test"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal" >

                <com.example.saveareaapp.view.SlideShowView
                    android:id="@+id/slideshowView_FrfistPage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_Gray_light" />
            <LinearLayout
                android:id="@+id/ll_guangbo_policefist"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="6dp" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:src="@drawable/guangbo" />

                <com.example.saveareaapp.view.VerticalTextview
                    android:id="@+id/tv_guangbo_FrfistPage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="6.5"
                    android:gravity="center_vertical" />

                
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/bg_Gray_light" />
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/ll_boast_FrfistPage" 
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:orientation="vertical">
                    <ImageView 
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/boastone"
                        android:layout_weight="9"/>
                    <TextView 
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="平安宣传"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_query_FrfistPage" 
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:orientation="vertical">
                    <ImageView 
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/query"
                        android:layout_weight="9"/>
                    <TextView 
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="案件查询"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_broke_FrfistPage" 
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:orientation="vertical">
                    <ImageView 
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/broke"
                        android:layout_weight="9"/>
                    <TextView 
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="爆料详情"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_certificates_FrfistPage" 
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:orientation="vertical">
                    <ImageView 
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/ertificates"
                        android:layout_weight="9"/>
                    <TextView 
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="办证服务"/>
                </LinearLayout>
                
                
                
                
            </LinearLayout>
            
            <LinearLayout 
                android:id="@+id/ll_showId_FrFistpage"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <Button
                    android:id="@+id/bt_addinfo_FrfistPage" 
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            		android:textColor="@color/white"
                    android:text="信息采集"
                    android:background="@color/fistpage"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp" />
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <Button
                    android:id="@+id/bt_service_FrfistPage" 
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
            		android:textColor="@color/white"
                    android:text="便民服务"
                    android:background="@color/fistpage"/>
                <Button
                    android:id="@+id/bt_exhibition_FrfistPage"  
                    android:layout_marginLeft="2dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
            		android:textColor="@color/white"
                    android:text="风采展示"
                    android:background="@color/fistpage"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/tv_Gray" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/interact" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="警民互动"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_Gray_light" />
            <LinearLayout
                android:id="@+id/ll_interaction_1_fpf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="4dp"
                    android:orientation="horizontal" >

                    <com.example.saveareaapp.view.yximageview
                        android:id="@+id/iv_head_1_FrfistPage"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/head1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_username_1_FrfistPage"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:text="不沉默"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_time_1_FrfistPage"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="2017-1-1 12:12"
                            android:textColor="#999999"
                            android:textSize="11sp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_word_1_FrfistPage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="14dp"
        			style="@style/TextinterectionStyle"
                    android:layout_marginRight="14dp"
                    android:text="阳光很好适合晒太阳,希望有关部门能尽快处理掉门口的垃圾就更好了。"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_policeInteraction_11_Frfistpage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/new1" />

                    <ImageView
                        android:id="@+id/iv_policeInteraction_12_Frfistpage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/new2" />

                    <ImageView
                        android:id="@+id/iv_policeInteraction_13_Frfistpage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/new3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_huifu_1_Frfistpage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:textColor="@color/comment_Gray"
                        android:textSize="13sp"
                        android:text="官方回复(3)"
                        style="@style/TextStyle" />
                    <LinearLayout 
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
	                        
	                    <ImageView 
	                        android:layout_width="0dp"
	                        android:layout_height="match_parent"
	                        android:src="@drawable/comment"
	                        android:layout_weight="9"/>
	
	                    <TextView
	                        android:id="@+id/tv_review_1_Frfistpage"
	                        android:layout_width="0dp"
	                        android:layout_height="match_parent"
	                        android:layout_weight="4"
	                        style="@style/TextStyle"
	                        android:textSize="13sp"
	                        android:textColor="@color/comment_Gray"
	                        android:text="7" />
                        
                    </LinearLayout>
                    <LinearLayout 
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
	                        
	                    <ImageView
	                        android:id="@+id/iv_agree_1_Frfistpage" 
	                        android:layout_width="0dp"
	                        android:layout_height="match_parent"
	                        android:src="@drawable/agree"
	                        android:layout_weight="9"/>
	
	                    <TextView
	                        android:id="@+id/tv_agree_1_Frfistpage"
	                        android:layout_width="0dp"
	                        android:layout_height="match_parent"
	                        android:layout_weight="4"
	                        style="@style/TextStyle"
	                        android:textSize="13sp"
	                        android:textColor="@color/comment_Gray"
	                        android:text="8" />
                        
                    </LinearLayout>
                   
                </LinearLayout>
                

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/bg_Gray_light" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_interaction_2_Frfistpage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="4dp"
                    android:orientation="horizontal" >

                    <com.example.saveareaapp.view.yximageview
                        android:id="@+id/iv_head_2_Frfistpage"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/head" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_username_2_Frfistpage"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:text="南风忆"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_time_2_Frfistpage"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="2017-1-1 12:12"
                            android:textColor="#999999"
                            android:textSize="11sp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_word_2_Frfistpage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="2dp"
                    android:text="小区的路坏了好久了，看看都成这样了物业到底什么时候能解决，看着不舒服"
                    style="@style/TextinterectionStyle"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_policeInteraction_21_Frfistpage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/new6" />

                    <ImageView
                        android:id="@+id/iv_policeInteraction_22_Frfistpage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/new6" />

                    <ImageView
                        android:id="@+id/iv_policeInteraction_23_Frfistpage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/new5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_huifu_2_Frfistpage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:textColor="@color/comment_Gray"
                        android:textSize="13sp"
                        android:text="官方回复(3)"
                        style="@style/TextStyle" />
                    <LinearLayout 
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
	                        
	                    <ImageView 
	                        android:layout_width="0dp"
	                        android:layout_height="match_parent"
	                        android:src="@drawable/comment"
	                        android:layout_weight="9"/>
	
	                    <TextView
	                        android:id="@+id/tv_review_2_Frfistpage"
	                        android:layout_width="0dp"
	                        android:layout_height="match_parent"
	                        android:layout_weight="4"
	                        style="@style/TextStyle"
	                        android:textSize="13sp"
	                        android:textColor="@color/comment_Gray"
	                        android:text="8" />
                        
                    </LinearLayout>
                    <LinearLayout 
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
	                        
	                    <ImageView
	                        android:id="@+id/iv_agree_2_Frfistpage" 
	                        android:layout_width="0dp"
	                        android:layout_height="match_parent"
	                        android:src="@drawable/agree"
	                        android:layout_weight="9"/>
	
	                    <TextView
	                        android:id="@+id/tv_review_2_Frfistpage"
	                        android:layout_width="0dp"
	                        android:layout_height="match_parent"
	                        android:layout_weight="4"
	                        android:textSize="13sp"
	                        android:textColor="@color/comment_Gray"
	                        style="@style/TextStyle"
	                        android:text="8" />
                        
                    </LinearLayout>
                   
                </LinearLayout>
                

            </LinearLayout>
        </LinearLayout>
     </ScrollView>

</LinearLayout>
