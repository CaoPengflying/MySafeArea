<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="4dp"
                    android:orientation="horizontal" >

                    <com.example.saveareaapp.view.yximageview
                        android:id="@+id/iv_head_AdInteraction"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/head1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_username_AdInteraction"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:text="不沉默"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_time_AdInteraction"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="2017-1-1 12:12"
                            android:textColor="#999999"
                            android:textSize="11sp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_word_AdInteraction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="2dp"
        			style="@style/TextinterectionStyle"
                    android:layout_marginRight="14dp"
                    android:text="#垃圾处理#阳光很好适合晒太阳,希望有关部门能尽快处理掉门口的垃圾就更好了。"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="6dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_photo_1_AdInteraction"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/new1" />

                    <ImageView
                        android:id="@+id/iv_photo_2_AdInteraction"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/new2" />

                    <ImageView
                        android:id="@+id/iv_photo_3_AdInteraction"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/new3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_huifu_AdInteraction"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:textColor="@color/comment_Gray"
                        android:textSize="13sp"
                        android:text="官方回复(3)"
                        style="@style/TextStyle" />
                    <LinearLayout 
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
	                        
	                    <ImageView 
	                        android:id="@+id/iv_review_AdInteraction" 
	                        android:layout_width="0dp"
	                        android:layout_height="match_parent"
	                        android:src="@drawable/comment"
	                        android:layout_weight="9"/>
	
	                    <TextView
	                        android:id="@+id/tv_review_AdInteraction"
	                        android:layout_width="0dp"
	                        android:layout_height="match_parent"
	                        android:layout_weight="4"
	                        style="@style/TextStyle"
	                        android:textSize="13sp"
	                        android:textColor="@color/comment_Gray"
	                        android:text="8" />
                        
                    </LinearLayout>
                    <LinearLayout 
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
	                        
	                    <ImageView
	                        android:id="@+id/iv_agree_AdInteraction" 
	                        android:layout_width="0dp"
	                        android:layout_height="match_parent"
	                        android:src="@drawable/agree"
	                        android:layout_weight="9"/>
	
	                    <TextView
	                        android:id="@+id/tv_argee_AdInteraction"
	                        android:layout_width="0dp"
	                        android:layout_height="match_parent"
	                        android:layout_weight="4"
	                        style="@style/TextStyle"
	                        android:textSize="13sp"
	                        android:textColor="@color/comment_Gray"
	                        android:text="8" />
                        
                    </LinearLayout>
                   
                </LinearLayout>
                

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/bg_Gray_light" />
            </LinearLayout>
    

</LinearLayout>
