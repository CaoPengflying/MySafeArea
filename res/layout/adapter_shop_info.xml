<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal">
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="top"
        android:background="@drawable/shopinfo"/>
   <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/tv_Shopname_AdShopInfo"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:gravity="bottom"
            android:text="小三便利店"/>

        <TextView
            android:id="@+id/tv_OwerName_AdShopInfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:gravity="bottom"
            android:text="张三"
            android:textColor="@color/comment_Gray"
            android:textSize="14sp" />
        
        <TextView 
            android:id="@+id/tv_phone_AdShopInfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="13sp"
            android:gravity="bottom"
            android:layout_marginLeft="4dp"
            android:textColor="@color/comment_Gray"
            android:text="18754869512"/>

    </LinearLayout>

        <TextView 
            android:id="@+id/tv_ShopAddress_AdShopInfo"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:text="前进东路551号"
            android:textColor="@color/comment_Gray"/>
        
    </LinearLayout>
  
</LinearLayout>
