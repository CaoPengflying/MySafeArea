<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <include layout="@layout/activity_base" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/policebule"
        android:padding="6dp" >

        <ImageView
            android:id="@+id/iv_back_AtSearchCarInfo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/textView2"
            style="@style/TextTittleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="车辆信息查询" />
       <LinearLayout 
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_centerVertical="true">
            <Spinner
	            android:id="@+id/sp_selectArea_AtSearchCarInfo"
                android:layout_marginLeft="20dp"
	            android:background="@color/policebule"
            	android:popupBackground="@color/policebule"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:dropDownWidth="100dp"
	            android:dropDownHorizontalOffset="40dp"
	            android:spinnerMode="dropdown"
	            android:entries="@array/areaname"/>
	
	        <ImageView
	            android:layout_width="12dp"
	            android:layout_height="12dp"
	            android:src="@drawable/select" />
            
        </LinearLayout>

        
    </RelativeLayout> 
	<View
	    android:layout_width="match_parent"
	    android:layout_height="2dp"
	    android:background="@color/bg_Gray_light"/>  
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="40dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
	    android:orientation="horizontal"
	    android:padding="6dp">
	    
	    <EditText  
	        android:id="@+id/ed_inputname_AtSearchCarInfo"
	        style="@style/EditTextStyle"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:hint="车主名/身份证/车牌号/车架号/发动机型号/联系方式"/>
	    <ImageView 
	        android:id="@+id/iv_search_AtSearchCar"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.1"
	        android:background="@drawable/search1"/>
	</LinearLayout>
	<View
	    android:layout_width="match_parent"
	    android:layout_height="5dp"
	    android:background="@color/bg_Gray_light"/>  
	
	<com.handmark.pulltorefresh.library.PullToRefreshListView 
	    android:id="@+id/lv_populationInfo_AtSearchCarInfo"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:entries="@array/contacts"/>
	    

</LinearLayout>

