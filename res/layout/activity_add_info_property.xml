<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <include layout="@layout/activity_base" />
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/policebule"
        android:padding="6dp">

        <ImageView
            android:id="@+id/iv_back_AtAddInfo_pro"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信息采集/查询"
            style="@style/TextTittleStyle"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/iv_select_AtAddInfo_pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/add" />

    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/bg_Gray_light"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/tv_populationInfo_AtAddInfo_pro"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="人口信息"/>
        <TextView 
            android:id="@+id/tv_carInfo_AtAddInfo_pro"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="车辆信息"/>
        <TextView 
            android:id="@+id/tv_shopInfo_AtAddInfo_pro"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="商铺信息"/>
        
    </LinearLayout> 
    <View 
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/bg_Gray_light"/>
    <android.support.v4.view.ViewPager
	    android:background="@color/white"
	    android:id="@+id/vPager_DetailInteraction_pro"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_gravity="center"
	    android:flipInterval="30"
	    android:persistentDrawingCache="animation" />
    
 </LinearLayout>
