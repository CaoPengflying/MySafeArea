<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >
   <!-- 填充的颜色 -->    <solid android:color="#72AAFE" />  
	<!-- 设置按钮的四个角为弧形 -->    
	<!-- android:radius 弧形的半径 -->    <corners android:radius="10dip" />
	<!--设置渐变-->    
	<gradient android:startColor="#3385FF"          
	android:endColor="#72AAFE"        
	android:angle="270"/>
	<!-- padding：Button里面的文字与Button边界的间隔 -->    
	<padding        android:left="8dp"        
	android:top="8dp"        
	android:right="8dp"        
	android:bottom="8dp"        />
</shape>
